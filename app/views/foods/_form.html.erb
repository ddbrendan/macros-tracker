<%= form_with model: food do |form| %>
    <% if food.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% food.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
  
    <div class="mb-3">
      <%= form.label :category, class: "form-label" %>
      <%= form.select :category, 
          options_for_select([
            "Fruits", "Vegetables", "Proteins", "Grains", 
            "Dairy", "Nuts & Seeds", "Oils & Fats", "Sweets", "Other"
          ], food.category), 
          { prompt: "Select a category" }, 
          class: "form-select" %>
    </div>
  
    <div class="row">
      <div class="col-md-3 mb-3">
        <%= form.label :calories_per_100g, "Calories per 100g", class: "form-label" %>
        <%= form.number_field :calories_per_100g, class: "form-control", 
                              required: true, step: 0.1, min: 0 %>
      </div>
  
      <div class="col-md-3 mb-3">
        <%= form.label :carbs_per_100g, "Carbs per 100g", class: "form-label" %>
        <%= form.number_field :carbs_per_100g, class: "form-control", 
                              required: true, step: 0.1, min: 0 %>
      </div>
  
      <div class="col-md-3 mb-3">
        <%= form.label :protein_per_100g, "Protein per 100g", class: "form-label" %>
        <%= form.number_field :protein_per_100g, class: "form-control", 
                              required: true, step: 0.1, min: 0 %>
      </div>
  
      <div class="col-md-3 mb-3">
        <%= form.label :fats_per_100g, "Fats per 100g", class: "form-label" %>
        <%= form.number_field :fats_per_100g, class: "form-control", 
                              required: true, step: 0.1, min: 0 %>
      </div>
    </div>
  
    <div class="d-grid">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>